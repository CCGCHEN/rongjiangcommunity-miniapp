<!--index.wxml-->
<block wx:if="{{hasUserInfo}}">
<view class="container">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"/>
    <text class="userinfo-nickname">Hi, {{userInfo.nickName}}</text>
    <text class="welcom">欢迎来到榕江社区</text>
    
    <text class="tip" wx:if="{{!status}}" class="tipInfo">榕江社区即将上线，认证校友抢先体验</text>
    <text class="tip" wx:if="{{status==='pending'}}">正在认证中，请等候工作人员完成认证。</text>
    <text class="tip" wx:if="{{status==='notok'}}">认证失败，请重新填写信息再次提交认证。</text>
    <text class="tip" wx:if="{{status==='ok'}}">已认证</text>
    <button wx:if="{{status!=='pending' && status!=='ok'}}" bindtap="gotoRegisterAndLogin" class="register_btn" size="mini">
      去认证
    </button>
  </view>
  <!-- <view>
    <button bindtap="gotoRegisterAndLogin">进入注册页</button>
  </view> -->
</view>
</block>
<button 
  wx:if="{{canIUse}}" 
  hidden="{{hasUserInfo}}"
  open-type="getUserInfo"
  bindgetuserinfo="bindGetUserInfo">授权登录</button>

<view wx:else>请升级微信版本</view>
