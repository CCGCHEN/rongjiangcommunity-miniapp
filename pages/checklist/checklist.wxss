page {
  background: #d7d7d7;
}

/* items-list */
.items-list{
  background: #d7d7d7;
}

.check-item{
  background: #fff;
  margin-top: 10rpx;
}

.check-item{
  overflow: hidden;
  padding: 30rpx;
}

.check-body{
  margin-left: 120rpx;
}
.check-body2{
  clear: both;
  margin-top: 25rpx;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.check-name{
  width: 120rpx;
  float: left;
  color: #212121;
  font-size: 34rpx;
  line-height: 1;
}
.check-class{
  color: #666;
  font-size: 28rpx;
  line-height: 1;
  overflow: hidden;
}

.check-class-mate-title{
  font-size: 28rpx;
  color: #666;
  line-height: 1;
}

.check-class-mate-name{
  font-size: 28rpx;
  color: #666;
  line-height: 1;
}

.check-button{
  font-size: 28rpx;
  float: right;
  width: 180rpx;
  margin-top: 30rpx;
  background-color: #4e85c6;
  color: #FFF;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.section-marks{
  line-height: 160rpx;
}
.shenhe-modal .modal-input{
  background:none;
  border:none;
}
.shenhe-modal radio-group{
  margin:0px auto;
}
.shenhe-modal label{
  margin:0px 35rpx;
}