/* pages/me_relationship/me_relationship.wxss */
.page{
  background: #d7d7d7;
}
.info-list{
  height: 190rpx;
  margin-top: 10rpx;
  background: #fff;
  padding: 20rpx 25rpx;
}
.list-top{
  position: relative;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.list-img{
  float: left;
  width: 70rpx;
  height: 70rpx;
}
.list-user{
  float: left;
  height: 70rpx;
  margin-left: 15rpx;
}
.list-name{
  float: left;
  font-size: 30rpx;
  font-weight: bolder;
}
.list-info{
  clear: both;
  float: left;
  font-size: 22rpx;
  margin-top: 4rpx;
}
.list-time{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
}
.list-middle{
  clear: both;
  margin-top: 10rpx;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.list-bottom{

}
.info-save, .info-community{
  position: relative;
  float: right;
  width: 35rpx;
  height: 30rpx;
  margin-right: 50rpx;
}
.info-community{
  margin-right: 20rpx;
}
.info-save image, .info-community image{
  width: 100%;
  height: 100%;
}
.info-save .num , .info-community .num{
  font-size: 20rpx;
  position: absolute;
  left: 20rpx;
  top: -5rpx;
}